<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasestyleTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_titre</item>
        <item name="android:padding">@dimen/padding_titre</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_res</item>
        <item name="android:textColor">@color/texte_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BasestyleTextView.TitreStyle">
        <item name="android:background">@color/fond_titre</item>
    </style>

    <style name="BasestyleTextView.TResStyle">
        <item name="android:background">@color/fond_tres</item>
        <item name="android:layout_marginTop">@dimen/marginTop_res</item>
    </style>

    <style name="LabelStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_taille</item>
        <item name="android:padding">@dimen/padding_textView</item>
        <item name="android:textColor">@color/texte_color</item>
        <item name="android:background">@color/fond_label</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@color/fond_edit</item>
        <item name="android:padding">@dimen/padding_textView</item>
        <item name="android:layout_marginRight">@dimen/marginLeft_edit</item>
        <item name="android:layout_marginLeft">@dimen/marginLeft_edit</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_taille</item>
        <item name="android:textColor">@color/texte_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/state1</item>
        <item name="android:padding">@dimen/padding_btn</item>
        <item name="android:layout_margin">@dimen/margin_btn</item>

    </style>

    <style name="RadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_taille</item>
        <item name="android:textColor">@color/texte_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_textView</item>
        <item name="android:background">@color/fond_radio</item>
    </style>
</resources>
